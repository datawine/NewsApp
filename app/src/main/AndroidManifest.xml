<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.detailinfo.DetailInfoActivity"
            android:label="@string/title_activity_detail_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.briefinfo.BriefInfoActivity"
            android:label="@string/title_activity_brief_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.mysplash.SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.settings.MySettingsActivity"
            android:label="@string/title_activity_my_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.settings.ChangeTagActivity"
            android:label="@string/title_activity_change_tag"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
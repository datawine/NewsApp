<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.newsapp.view.settings.MySettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分类修改"
            android:textSize="30dp"
            android:textColor="@color/icons"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="@color/icons">

        <ImageButton
            android:id="@+id/btn_add_tag"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:background="@drawable/ic_playlist_add_black_48dp"
            />

        <ImageButton
            android:id="@+id/btn_delete_tag"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:background="@drawable/ic_delete_black_48dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/icons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="现有分类"
                android:textSize="30dp"
                android:textColor="@color/primary_text"
                android:layout_alignParentLeft="true"
                />

            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/btn_clear_tag_show"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_border_clear_black_48dp"
                />

        </RelativeLayout>

        <include layout="@layout/cur_change_tag" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/icons">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="所有分类"
                android:textSize="30dp"
                android:textColor="@color/primary_text"
                android:layout_alignParentLeft="true"
                />

            <ImageButton
                android:id="@+id/btn_clear_tag_all"
                android:layout_margin="10dp"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_border_clear_black_48dp"
                />

        </RelativeLayout>

        <include layout="@layout/content_change_tag" />

    </LinearLayout>


</LinearLayout>
